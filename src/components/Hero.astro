---
import HeroVideo from "./HeroVideo";
import DownloadResumeBtn from "./DownloadResumeBtn.astro";
---

<section
  id="home"
  class="min-h-screen flex items-center pt-30 md:pt-0 relative overflow-hidden"
>
  <div
    class="absolute top-0 right-0 w-[800px] h-[800px] bg-primary/10 rounded-full blur-[120px] -z-10 translate-x-1/3 -translate-y-1/4"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
    <div>
      <div
        class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-text/5 border border-text/10 text-xs text-backend mb-6"
      >
        <span class="w-2 h-2 rounded-full bg-backend animate-pulse"></span>
        Open to Work & Collabs
      </div>

      <h1 class="text-5xl md:text-7xl font-bold leading-tight mb-6">
        Engineering Scalable & Aesthetic
        <span
          class="text-transparent bg-clip-text bg-linear-to-r from-primary to-purple-500"
          >Software.</span
        >
      </h1>

      <p class="text-muted text-lg mb-8 max-w-lg leading-relaxed">
        Full-stack developer focused on Clean Architecture, high-performance
        interfaces, and scalable backend solutions.
      </p>

      <div class="flex gap-4">
        <a
          href="#about"
          class="bg-text text-background px-6 py-3 rounded-lg font-semibold hover:bg-text/80 transition-colors"
        >
          Explore Architecture
        </a>
        <DownloadResumeBtn />
      </div>
    </div>

    <HeroVideo
      client:visible
      videoPath="izi-gym-saas-demo.mp4"
      thumbnailUrl="izi-gym-saas-demo.mp4"
    />
  </div>
</section>
