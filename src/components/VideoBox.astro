---
interface Props {
    url: string;
}

const { url } = Astro.props;
---

<div
    class="relative w-full aspect-video rounded-3xl overflow-hidden border border-white/10 shadow-2xl group"
>
    <div
        class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors duration-300 z-10 pointer-events-none"
    >
    </div>

    <iframe
        class="w-full h-full"
        src={url}
        title="Video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen></iframe>

    <!-- Optional: Add a subtle overlay or border effect -->
    <div
        class="absolute inset-0 border border-white/5 rounded-3xl pointer-events-none"
    >
    </div>
</div>
